@using Practice_1.Areas.Admin.Models;

@model User

@{
	ViewBag.Title = "Create";
	Layout = "/Views/Shared/_Layout.cshtml";
}

<h2>Добавить пользователя</h2>
<form asp-action="create" asp-controller="home">
	<p>
		<label asp-for="Email">Почта </label><br />
		<input type="email" asp-for="Email" />
	</p>
	<p>
		<label asp-for="Name">Имя </label><br />
		<input type="text" asp-for="Name"/>
	</p>
	<p>
		<p><b>Роль</b></p>
		<p><input type="radio" value="User" asp-for="Role" checked> Пользователь</p>
		<p><input type="radio" value="Admin" asp-for="Role"> Admin</p>
		@*<label asp-for="Role.Name">Роль</label>
		<select asp-for="Role.Name" asp-items="ViewBag.Roles"></select>*@
	</p>
	<p>
		<label asp-for="Age">Возраст </label><br />
		<input type="number" asp-for="Age" />
	</p>
	<p>
		<label asp-for="Password">Пароль</label><br />
		<input type="password" asp-for="Password" />
	</p>
		<input type="submit" value="Создать юзверя"/>
	</p>
</form>