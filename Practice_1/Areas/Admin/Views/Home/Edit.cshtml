@using Practice_1.Areas.Admin.Models;

@model User

@{
	ViewBag.Title = "Edit user";
	Layout = "/Views/Shared/_Layout.cshtml";
}

<h2>Изменить данные</h2>
<form asp-action="edit" asp-controller="home" asp-route-id="@Model.Id">
	<p>
		<label asp-for="Email">Почта </label><br />
		<input type="email" asp-for="Email" />
	</p>
	<p>
		<label asp-for="Name">Имя</label><br />
		<input type="text" asp-for="Name"/>
	</p>
	<p>
		<p><b>Роль</b></p>
		<p><input type="radio" value="User" asp-for="Role"> Пользователь</p>
		<p><input type="radio" value="Admin" asp-for="Role"> Admin</p>
	</p>
	<p>
		<label asp-for="Age">Возраст</label><br />
		<input type="number" asp-for="Age" />
	</p>
	<p>
	<p>
		<label asp-for="Password">Пароль</label><br />
		<input type="password" asp-for="Password" />
	</p>
		<input type="submit" value="Сохранить"/>
	</p>
</form>