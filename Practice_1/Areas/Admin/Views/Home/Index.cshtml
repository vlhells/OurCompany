@using Practice_1.Areas.Admin.Models;

@model IEnumerable<User>

@{
	ViewBag.Title = "Index";
	Layout = "/Views/Shared/_Layout.cshtml";
}

<h2>Список пользователей:</h2>
<p><a asp-action="Create">Добавить пользователя</a></p>
<table class="table">
	<tr><th>Почта</th><th>Имя</th><th>Роль</th><th>Возраст</th><th>Пароль</th></tr>
	@foreach (var item in Model)
	{
		<tr>
			<td>@item.Email</td>
			<td>@item.Name</td>
			<td>@item.Role</td>
			<td>@item.Age</td>
			<td>@item.Password</td>
			<td>
				<a asp-action="Edit" asp-controller="Home" asp-route-id="@item.Id">Изменить</a>
			</td>
			<td>
				<form asp-controller="Home" asp-action="Delete" method="post" asp-route-id="@item.Id">
					<input type="submit" value="Удалить"/>
				</form>
			</td>
		</tr>
	}
</table>